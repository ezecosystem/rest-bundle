<?xml version="1.0" encoding="UTF-8"?>
<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services
                               http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="xrow_rest.oauth.user_provider.class">xrow\restBundle\OAuth\UserProvider</parameter>
        <parameter key="xrow_rest.interactive_event_listener.class">xrow\restBundle\EventListener\InteractiveLoginListener</parameter>
        <parameter key="xrow_rest.controller.user.class">xrow\restBundle\Controller\User</parameter>
    </parameters>

    <services>
        <service id="xrow_rest.oauth.user_provider" class="%xrow_rest.oauth.user_provider.class%">
            <argument type="service" id="ezpublish.security.user_provider" />
        </service>

        <service id="xrow_rest.interactive_event_listener" class="%xrow_rest.interactive_event_listener.class%">
            <argument type="service" id="@ezpublish.api.service.user" />
            <tag name="kernel.event_subscriber" />
        </service>
 
        <service id="xrow_rest.controller.user" class="%xrow_rest.controller.user.class%">
            <argument type="service" id="ezpublish_rest.controller.baser" />
        </service>
    </services>
</container>